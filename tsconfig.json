{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "noEmitOnError": true,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": false,
    "inlineSources": false,
    "outDir": "dist",
    "moduleResolution": "node",
    "strictNullChecks": false
  },
  "filesGlob": [
    "./**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "build",
    "coverage"
  ]
}